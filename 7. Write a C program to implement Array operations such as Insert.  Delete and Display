#include <stdio.h>

int a[100], n = 0;

void display() {
    for (int i = 0; i < n; i++) printf("%d ", a[i]);
    printf("\n");
}

void insert(int pos, int val) {
    for (int i = n; i > pos; i--) a[i] = a[i - 1];
    a[pos] = val;
    n++;
}

void delete(int pos) {
    for (int i = pos; i < n - 1; i++) a[i] = a[i + 1];
    n--;
}

int main() {
    int ch, pos, val;
    while (1) {
        printf("1.Insert 2.Delete 3.Display 4.Exit\n");
        scanf("%d", &ch);
        if (ch == 1) {
            printf("Pos Val: ");
            scanf("%d%d", &pos, &val);
            insert(pos, val);
        } else if (ch == 2) {
            printf("Pos: ");
            scanf("%d", &pos);
            delete(pos);
        } else if (ch == 3) {
            display();
        } else {
            break;
        }
    }
    return 0;
}
